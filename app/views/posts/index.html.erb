<p style="color: green"><%= notice %></p>
<h1>Posts</h1>
<%= form_with url: search_path, method: :post do |form| %>
  <%= form.label :search %>
  <%= form.text_field :search %>
  <%= form.label :category %>
  <%= form.select :category, options_for_select(Category.all.map { |cat| [cat.name, cat.id] }.insert(0, nil)) %>
  <%= form.submit "Search", class: "btn btn-secondary" %>
<% end %>
<div id="posts">
  <%= render "posts/posts", posts: @posts %>
</div>
<%= link_to "New post", new_post_path %>
